{
  "name": "polygpt",
  "version": "0.1.0",
  "description": "Mirror text to ChatGPT and Gemini simultaneously",
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.polygpt.app",
    "productName": "PolyGPT",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "config/**/*",
      "package.json"
    ]
  }
}
